<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main.DeatilsActivity">

    <ImageView
        android:src="@drawable/ic_account"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/image_view"/>

    <TextView
        android:id="@+id/edit_text_sign_in_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:layout_constraintTop_toBottomOf="@id/image_view"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/mobilephoneValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:layout_constraintTop_toBottomOf="@id/edit_text_sign_in_username"
        android:textSize="16sp" />
    <TextView
        android:id="@+id/homephoeValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/mobilephoneValue"
        android:layout_margin="8dp"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/workphoneValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:layout_constraintTop_toBottomOf="@id/homephoeValue"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/groupName"
        android:layout_width="match_parent"
        android:layout_margin="8dp"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/workphoneValue"
        android:layout_height="wrap_content" />


</android.support.constraint.ConstraintLayout>